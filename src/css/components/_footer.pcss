.footer{
    align-items: flex-start;
    position: relative;
    @media(max-width: 600px){
        flex-wrap: wrap;
    }
    .copy{
        margin-top: auto;
        color: #9BA6B2;
        position: relative;
        bottom: -1.7em;
        @media(max-width: 600px){
            width: 100%;
            p{
                text-align: right;
            }
        }
        @media(max-width: 600px){
            width: 100%;
            p{
                text-align: center;
            }
        }
    }
    
    .lnk-group{
        @media(max-width: 567px){
            width: auto;
            margin-bottom: 1.5em;
            
            &:last-child{
                margin-bottom: 0;
            }
        }
        p{
            text-transform: uppercase;
            margin-bottom: calc(.7em / .75);
            @media(max-width: 567px){
                font-size: .8em;
            }
        }
        a {
            line-height: 1.37;
            display: block;
            margin-bottom: .25em;
            @media(max-width: 567px){
                font-size: .7em;
                line-height: 1.44;
            }
        }
    }
    .links-wrapper{
        width: 100%;
        max-width: 44.6em;
        align-items: flex-start;
        @media(max-width: 567px){
            flex-direction: column;
    align-items: center;
    font-size: 1.2em;
    text-align: center;
        }
        
    }
}
footer{
    background: #F8F8F8;
    padding: 3.65em 0 3.55em;
    position: relative;
    .social{
        max-width: 20em;
        margin-bottom: 3.1em;
        @media(max-width: 567px){
            flex-direction: column;
            max-width: unset;
        }
        .for-adaptive{
            @media(max-width: 567px){
                margin: auto;
                margin-bottom: 1.3em;
                width: 100%;
                text-align: center;
            }
        }
    }
    
    .social-links{
        display: flex;
        width: 11.6em;
        justify-content: space-between;
        a{
            display: block;
            &:hover{
                path{
                fill: #0024DE;
                }
            }
        }
        svg{
            display: block;
            width: 1.3em;
            path{
                fill: #444444;
                transition: .3s;
            }
        }
    }
}