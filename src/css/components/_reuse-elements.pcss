.main-text{
    font-size: 0.65em;
    margin: 0;
    
}
.caption-text{
    font-size: 0.9em;
    margin: 0;
}
.half-col{
    width: 50%;
    padding: 0 15px;
}
.quarter-col{
    width: 25%;
    padding: 0 15px;
}
.row{
    margin: 0 -15px;
}
.container{
    width: calc(59.6em + 30px);
    padding-left: 15px;
    padding-right: 15px;
    max-width: 100%;
    margin: 0 auto;
}
.flex{
    display: flex;
    justify-content: space-between;
    align-items: center; 
}